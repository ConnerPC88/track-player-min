{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleSuffixes": [
      ".ios",
      ".android",
      ".native",
      ""
    ],
  },
  "include": [
    ".",
    ".prettierrc.js",
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
